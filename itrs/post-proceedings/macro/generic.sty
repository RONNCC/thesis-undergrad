\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{macro/generic}
  [2016/01/29 version 1.0.0 Generic Macros]

\RequirePackage{mathtools}

%%% Paired delimiters
\DeclarePairedDelimiter\parens{(}{)}             % parenthesis
\DeclarePairedDelimiter\bracks{\lbrack}{\rbrack} % brackets
\DeclarePairedDelimiter\braces{\lbrace}{\rbrace} % braces
\DeclarePairedDelimiter\abs{\lvert}{\rvert}      % absolute value
\DeclarePairedDelimiter\norm{\lVert}{\rVert}     % double verts
\DeclarePairedDelimiter\angled{\langle}{\rangle} % angle brackets
\DeclarePairedDelimiter\set{\lbrace}{\rbrace}    % braces
\DeclarePairedDelimiterX\setdef[2]{\{}{\}}
  {#1 \mathrel{}\mathclose{}\delimsize|\mathopen{}\mathrel{} #2}


%%% Quotation marks for code
\newcommand{\sq}{\text{\ttfamily{\char'15}}} % Single quote
\newcommand{\qq}{\text{\ttfamily"}}          % Double quote
\newcommand{\qquote}[1]{\qq #1\qq{}}         % Strings


%%% Theorem environments
\theoremstyle{plain}
\newtheorem{example}{Example}[section]
\newtheorem{theorem}{Theorem}[section]
\newtheorem{corollary}[theorem]{Corollary}
\newtheorem{lemma}[theorem]{Lemma}
\newtheorem{proposition}[theorem]{Proposition}
\newtheorem{conjecture}[theorem]{Conjecture}
\newtheorem{axiom}[theorem]{Axiom}
\theoremstyle{definition}
\newtheorem{definition}[theorem]{Definition}
\theoremstyle{remark}
\newtheorem{remark}[theorem]{Remark}


%%% Logic
\newcommand{\DD}{\mathcal{D}}
\newcommand{\EE}{\mathcal{E}}
\newcommand{\FF}{\mathcal{F}}
\newcommand{\GG}{\mathcal{G}}
\newcommand{\HH}{\mathcal{H}}

\newcommand\defined{\mathrel{\triangleq}}


%%% Math
\DeclareMathOperator\dom{dom}
\newcommand\lam[2]{\lambda {#1} . {#2}}
\newcommand\lamt[3]{\lambda {#1} \in {#2} . {#3}}


%%% Induction
\newcommand\centerLine[1]{
  \begingroup\setbox0=\hbox{#1}%
  \parbox{\wd0}{\box0}\endgroup}
\newcommand\pred[1]{\mathcal{P}\parens*{#1}}
\newcommand\predC[1]{\pred{\centerLine{#1}}}
\newcommand\predQ[1]{\mathcal{Q}\parens*{#1}}
\newcommand\predQC[1]{\predQ{\centerLine{#1}}}

\DeclareMathOperator\induction{inductioHyp}

